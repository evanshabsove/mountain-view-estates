<%= bootstrap_form_for @user_product, url: product_user_path do |f| %>
  <div id="special-products-table">
    <table class="table">
    <% @special_products.each do |special_product| %>
      <tr>
        <th><%= special_product.description %></th>
        <th><%= f.check_box :special_product_id, {:multiple => true, class: "special-product-checkbox"}, checked_value = "#{special_product.id}", unchecked_value = nil%></th>
      </tr>
    <% end %>
    </table>
  </div>
  <div id="inventory-products-table">
    <table class="table">
    <% @inventory_products.each do |inventory_product| %>
      <tr>
        <th><%= inventory_product.description %></th>
        <th><%= f.check_box :inventory_product_id, {:multiple => true, class: "special-product-checkbox"}, checked_value = "#{inventory_product.id}", unchecked_value = nil%></th>
      </tr>
    <% end %>
    </table>
  </div>
  <%= f.submit %>
<% end %>
