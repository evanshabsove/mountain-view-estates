<div id="wrapper">
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand"><%= link_to('Admin', admin_index_path) %></li>
      <li><%= link_to('Manage Users', admin_new_path) %></li>
      <li><%= link_to('Manage Products', admin_products_path) %></li>
      <li><%= link_to('Add Product', admin_new_product_path) %></li>
      <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
    </ul>
  </div>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <h1>Please select what kind of item you are adding</h1>
          <div class="radio-buttons">
            <%= label_tag 'Inventory Product' %>
            <%= radio_button_tag 'product', 'inventory product', :class => "form-control" %>
            <%= label_tag 'Special Product' %>
            <%= radio_button_tag 'product', 'special product', :class => "form-control" %>
          </div>
          <div id="special-product-form">
            <%= bootstrap_form_for @special_product, method: :post, url: admin_create_special_product_path do |f| %>
              <%= f.text_field  :inventory_code %>
              <%= f.text_field :description %>
              <%= f.number_field :stock, value: 1 %>
              <%= f.text_field :product_code %>
              <%= f.submit %>
            <% end %>
          </div>
          <div id="inventory-product-form">
            <%= bootstrap_form_for @inventory_product, method: :post, url: admin_create_inventory_product_path do |f| %>
              <%= f.text_field  :inventory_code %>
              <%= f.text_field :description %>
              <%= f.number_field :stock, value: 1 %>
              <%= f.text_field :product_code %>
              <%= f.submit %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
